{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "allowJs": false,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "@config/*": ["./config/*"],
      "@logger/*": ["./logger/*"],
      "@modules/*": ["./modules/*"],
      "@types/*": ["./@types/*"]
  }
},
"include": [
  "src/**/*",
  "test/**/*"
],
"exclude": [
  "node_modules"
]
}
